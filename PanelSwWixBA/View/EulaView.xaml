<ux:BaseView x:Class="PanelSW.WixBA.View.EulaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ux="clr-namespace:PanelSW.WixBA.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             >

    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </UserControl.Resources>

    <!-- License -->
    <TextBlock Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Auto"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextWrapping="WrapWithOverflow"
             DataContext="{Binding EulaViewModel}"
             Text="{Binding LicenseText}"
             />
</ux:BaseView>
    
