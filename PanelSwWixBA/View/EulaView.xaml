<ux:BaseView x:Class="PanelSW.WixBA.View.EulaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ux="clr-namespace:PanelSW.WixBA.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             >

    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- License -->
        <TextBox Grid.Row="0" Background="Transparent" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                     DataContext="{Binding EulaViewModel}"
                     Text="{Binding LicenseText}"
                     />
    </Grid>
</ux:BaseView>
